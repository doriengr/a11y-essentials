{{# The sitemap.xml template that renders a SEO friendy sitemap.xml. #}}
{{ xml_header }}
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
    {{ seo:sitemap_collections }}
        {{ _collection_handle = handle }}
        {{ sites }}
            {{ collection from="{_collection_handle}" seo_noindex:isnt="true" as="results" site="{handle}" }}
                {{ results }}
                    <url>
                        <loc>{{ permalink }}</loc>
                        <lastmod>{{ updated_at format="Y-m-d" }}</lastmod>
                        <changefreq>{{ sitemap_change_frequency ? sitemap_change_frequency : 'weekly' }}</changefreq>
                        <priority>{{ sitemap_priority ? sitemap_priority : '0.5' }}</priority>
                    </url>
                {{ /results }}
            {{ /collection }}
        {{ /sites }}
    {{ /seo:sitemap_collections }}
</urlset>
